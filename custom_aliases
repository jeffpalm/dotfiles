alias linkdotfiles="ln -nfs ~/dotfiles/vimrc ~/.vimrc && ln -nfs ~/dotfiles/gvimrc ~/.gvimrc && ln -nfs ~/dotfiles/ideavimrc ~/.ideavimrc && rm -rf ~/.vim && mkdir ~/.vim && ln -nfs ~/dotfiles/colors ~/.vim/colors"
alias updatealiases="ln -nfs ~/dotfiles/custom_aliases ~/.custom_aliases && source ~/.custom_aliases"
alias covrdevserver="ssh root@162.242.144.198"
function lazygit() {
    git add .
    git commit -m "$1"
    git push
}
function gitdotfiles() {
    cd ~/dotfiles
    git add .
    git commit -m "$1"
    git push
    ln -nfs ~/dotfiles/custom_aliases ~/.custom_aliases
    source ~/.custom_aliases
    linkdotfiles
}